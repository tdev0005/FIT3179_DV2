{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "datasets/arrivaldeparturefixed.csv",  
    "format": {
      "type": "csv"
    }
  },

  "mark": "bar",
  "width": 700,  
  "height": 200,  
  "encoding": {
    "x": {
      "field": "departure_port",
      "type": "nominal",
      "title": "City",
      "axis": {"labelAngle": 0},
      "sort": ["Alice Springs", "Brisbane", "Cairns", "Canberra", "Darwin", "Perth", 
               "Hamilton Island", "Hobart", "Melbourne", "Newcastle", "Proserpine", 
               "Gold Coast", "Sydney"]
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Fare"
    },
    "xOffset": {
      "field": "group",
      "type": "nominal",
      "title": "Group"
    },
    "color": {
      "field": "group",
      "type": "nominal",
      "title": "Group",
      "scale": {
        "domain": ["Departure", "Arrival"], 
        "range": ["#e74c3c", "steelblue"]  
      }
    }
  }
}
